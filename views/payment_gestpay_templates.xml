<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="gestpay_form">
            <div>
                <input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me=""/>
                <input type="hidden" name='amount' t-att-value='amount'/>
                <input type="hidden" name='buyer_name' t-att-value='buyer_name'/>
                <input type="hidden" name='buyer_email' t-att-value='buyer_email'/>
                <input type="hidden" name='transaction_id' t-att-value='transaction_id'/>
            </div>
        </template>

        <template id="gestpay_s2s_form">
            <form method="post" t-att-action="'/payment/authorize/s2s/create' if not json else '/payment/authorize/s2s/create_json'">
                <!-- TODO IMPLEMENT s2s FORM-->
            </form>
        </template>
    </data>
</odoo>